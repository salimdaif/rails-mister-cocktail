<h1>MisterCocktails</h1>


<% @cocktails.each do |cocktail| %>
<div class="product">
  <div class='product-upvote'>
    <div class="product-arrow"></div>
    <div class='product-count'>95</div>
  </div>
  <img src="https://i2.wp.com/revolutionspirits.com/wp-content/uploads/2012/05/cocktail-placeholder.jpg" alt="kudoz" class="product-image hidden-xs">
  <div class='product-body'>
    <h3> <%= link_to Kramdown::Document.new(cocktail.name).to_html.html_safe, cocktail_path(cocktail), :style => "text-decoration: none !important;" %> </h3>
  </div>
  <ul class="list-inline product-controls product-controls-hidden hidden-sm hidden-xs">
    <li><a href=""><i class="fa fa-heart"></i></a></li>
    <li><a href=""><i class="fa fa-share"></i></a></li>
    <li><a href=""><i class="fa fa-star"></i></a></li>
  </ul>
</div>
<%end%>
